{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/.env*",
      "!**/.git",
      "!**/.next",
      "!**/app/globals.css",
      "!**/node_modules",
      "!**/package-lock.json",
      "!**/package.json",
      "!**/pnpm-lock.yaml",
      "!**/README.md",
      "!**/utils/auth-helpers/*"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": false,
    "enabled": true,
    "expand": "auto",
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "html": {
    "formatter": {
      "selfCloseVoidElements": "always"
    },
    "parser": {
      "interpolation": true
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": false,
      "jsxQuoteStyle": "double",
      "lineEnding": "lf",
      "quoteProperties": "preserve",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noImportantStyles": "off",
        "useArrowFunction": "error",
        "useOptionalChain": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useIsNan": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "attributes": ["className"],
            "functions": ["cn"]
          }
        }
      },
      "performance": {
        "noBarrelFile": "error",
        "noNamespaceImport": "error"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "error",
        "noYodaExpression": "error",
        "useCollapsedElseIf": "error",
        "useConsistentCurlyBraces": {
          "fix": "safe",
          "level": "error"
        },
        "useConst": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "off",
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noDuplicateObjectKeys": "error",
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "error",
        "useAwait": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
